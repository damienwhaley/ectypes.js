//make a mill
mill = require('mill');

//factory call to generate model - Post
post = mill.Post() //returns a vanilla, milled object
comment =  mill.Comment() //returns an instantiated, milled object
comment = mill.Comment()({create: false}) //returns an uninstantiated milled ob


